<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bug_reporting_fundal_landscape"
    tools:context=".BugReportActivity">

    <Button
        android:id="@+id/back_bug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fundal_btn_meniu"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bug_description"
        app:layout_constraintTop_toBottomOf="@+id/bug_description"
        app:layout_constraintVertical_bias="0.251" />

    <Button
        android:id="@+id/send_bug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fundal_btn_meniu"
        android:text="SEND"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bug_description"
        app:layout_constraintTop_toBottomOf="@+id/bug_description"
        app:layout_constraintVertical_bias="0.251" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Please describe the problem you encountered:"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bug_description"
        android:layout_width="606dp"
        android:layout_height="90dp"
        android:layout_marginTop="44dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="start|top"
        android:hint="your answer"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

</androidx.constraintlayout.widget.ConstraintLayout>