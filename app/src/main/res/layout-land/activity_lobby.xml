<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_fundal_2"
    tools:context="game_modes.LobbyActivity">

    <TextView
        android:id="@+id/lobby_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="64dp"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:text="Searching for opponent.."
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lobby_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="52dp"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:text="Press CHECK to verify if you found an opponent."
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lobby_title" />

    <Button
        android:id="@+id/cancel_lobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@drawable/fundal_btn_meniu"
        android:text="CANCEL"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/lobby_description"
        app:layout_constraintTop_toBottomOf="@+id/lobby_description" />

    <Button
        android:id="@+id/start_lobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:alpha="0.5"
        android:background="@drawable/fundal_btn_meniu"
        android:enabled="false"
        android:text="START"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lobby_description"
        app:layout_constraintTop_toBottomOf="@+id/lobby_description" />

    <Button
        android:id="@+id/check_lobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="CHECK"
        android:textStyle="bold"
        android:background="@drawable/fundal_btn_meniu"
        app:layout_constraintEnd_toStartOf="@+id/start_lobby"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toEndOf="@+id/cancel_lobby"
        app:layout_constraintTop_toBottomOf="@+id/lobby_description" />
</androidx.constraintlayout.widget.ConstraintLayout>